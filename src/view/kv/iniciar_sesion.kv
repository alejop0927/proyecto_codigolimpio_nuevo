<Inicio_de_sesion>:
    name: "inicio_sesion"  # Asegúrate de que el nombre de la pantalla sea 'inicio_sesion'
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        TextInput:
            id: correo_input
            hint_text: "Correo"

        TextInput:
            id: contraseña_input
            hint_text: "Contraseña"
            password: True

        Button:
            text: "Iniciar sesión"
            on_press: root.iniciar_sesion_kv()

        Button:
            text: "Cambiar contraseña"
            on_press: app.root.current = "cambiar_contraseña"
        
        Button:
            text: "Registrarme"
            on_press: app.root.current = "crear_usuario"
        
        Button:
            text: "Salir"
            on_press: app.stop()
